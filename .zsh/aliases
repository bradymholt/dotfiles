alias ip='curl -4 ifconfig.co && curl -6 ifconfig.co'
compress-video() {
  set -x
  ffmpeg -i $1 -c:v libx264 -crf 23 ${1}_compressed.mp4
}
compress-audio() {
  # lame settings for podcast quality output
  set -x
  lame -V6 --vbr-new --resample 22 -m m $1
}