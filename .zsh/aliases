alias gd='git diff'
alias gdt='git difftool -y'
alias gmt='git mergetool'
alias gst='git stash'
alias gsts='git stash list -p'
alias gstp='git stash pop'

# The following git aliases point to scripts in {dotfiles}/home/bin
alias gac='git-add-commit'
alias gacp='git-add-commit-push'
alias gbc='git-branch-compare'
alias gbpurge='git-branch-purge'
alias gc='git-github-compare'
alias gpr='git-github-open-pr'
alias gmove='git-move-commits-new-branch'
alias gwtf='git-wtf'

alias gh='github' # Opens GitHub Desktop for current repo
gh-api() {
  set -x  
  if (( $# == 1 )); then
    # Example: gh-api bradymholt/myrepo/statuses
    curl -H "Authorization: token $GITHUB_API_TOKEN" https://api.github.com/repos/$1
  else
    # Example: gh-api bradymholt/myrepo/statuses/ed94da '{"state":"success","description":"Tests","context":"Tests"}'
    curl -H "Authorization: token $GITHUB_API_TOKEN" -H "Content-Type: application/json" -d $2 https://api.github.com/repos/$1
  fi
}

