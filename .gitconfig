# Documentation: https://www.kernel.org/pub/software/scm/git/docs/git-config.html

[user]
	email = brady.holt@gmail.com
	name = Brady Holt
	signingkey = /Users/bholt/.ssh/id_rsa
[includeIf "hasconfig:remote.*.url:git@github.com:ynab/**"]
	path = ./.secrets/ynab.gitconfig
[push]
	default = current
	autoSetupRemote = true
[core]
	excludesfile = /Users/bholt/.gitignore_global
	editor = code --wait
	pager = diff-so-fancy | less --tabs=4 -RF
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[merge]
	tool = bc3
	conflictStyle = zdiff3
[mergetool]
	bc3 = trustExitCode
	keepBackup = false
[diff]
	tool = bc3
	compactionHeuristic = true
	colorMoved = zebra
[pull]
	ff = true
[fetch]
	prune = true
[init]
	defaultBranch = main
[rebase]
	autosquash = true
[gpg]
	format = ssh
[commit]
	gpgsign = true
[interactive]
	diffFilter = diff-so-fancy --patch
[color]
	ui = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 11
	frag = magenta bold
	func = 146 bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[credential]
	helper = /usr/local/share/gcm-core/git-credential-manager
[credential "https://dev.azure.com"]
	useHttpPath = true
